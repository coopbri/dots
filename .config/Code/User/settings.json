{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#1073cf2d",
    "editor.lineHighlightBorder": "#9fced11f",
    // cursors
    // "editorCursor.foreground": "#ffff00",
    // "terminalCursor.foreground": "#ffff00"
    // "editorCursor.foreground": "#8bc89d",
    // "terminalCursor.foreground": "#8bc89d"
    "editorCursor.foreground": "#00fff2",
    "terminalCursor.foreground": "#00fff2",
    // "editor.selectionBackground": "#135564",
    // "editor.selectionHighlightBackground": "#135564"
    // "editor.selectionBackground": "#09165f",
    // "editor.selectionHighlightBackground": "#09415f"
    "editor.selectionBackground": "#054457",
    "editor.selectionHighlightBackground": "#054457aa"
  },
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.autoReveal": false,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  /**
   * Editor
   */
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.fontLigatures": true,
  "editor.inlayHints.fontSize": 10,
  "editor.inlayHints.padding": true,
  "editor.inlayHints.fontFamily": "roboto",
  "editor.rulers": [
    80,
    120
  ],
  "editor.suggestSelection": "first",
  "editor.fontFamily": "'FiraCode Nerd Font Mono', 'Fira Code', 'Hasklug Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback', 'Noto Color Emoji'",
  "editor.fontWeight": "500",
  "editor.linkedEditing": false,
  "editor.selectionClipboard": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // https://stackoverflow.com/a/72518926
  // https://github.com/microsoft/vscode/issues/98594
  "search.followSymlinks": false,
  "diffEditor.renderSideBySide": false,
  /**
   * Terminal
   */
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.commandsToSkipShell": [
    "language-julia.interrupt"
  ],
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "zsh"
    },
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  /**
   * Language-specific formatters
   */
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
    // "editor.defaultFormatter": "xaver.clang-format"
  },
  "[kotlin]": {
    "editor.defaultFormatter": "fwcd.kotlin"
  },
  "[html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[markdown]": {
    // "editor.wordWrap": "off",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true
  },
  "[tiltfile]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
  },
  // ! below does not work
  // "[tiltfile]": {
  // "emeraldwalk.runonsave": {
  //   "commands": [
  //     {
  //       "match": "Tiltfile",
  //       "cmd": "vscode.languages.setTextDocumentLanguage(activeEditor.document, python)"
  //     }
  //   ]
  // },
  //   "editor.defaultFormatter": "ms-python.python"
  // },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[solidity]": {
    "editor.defaultFormatter": "NomicFoundation.hardhat-solidity"
  },
  // automatically wrap comments
  // "rewrap.autoWrap.enabled": true,
  /**
   * JavaScript
   */
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.autoClosingTags": false,
  /**
   * TypeScript
   */
  "typescript.updateImportsOnFileMove.enabled": "always",
  // disable auto-closing tags
  "typescript.tsserver.log": "off",
  // https://stackoverflow.com/questions/52935211/disable-tsserver-for-visual-studio-code
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.autoClosingTags": false,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.suppressWhenTypeMatchesName": true,
  /**
   * Python
   */
  "python.languageServer": "Pylance",
  /**
   * Miscellaneous
   */
  "files.trimTrailingWhitespace": true,
  "eslint.validate": [
    "typescript",
    "typescriptreact"
  ],
  "eslint.codeActionsOnSave.rules": null,
  "liveSassCompile.settings.generateMap": false,
  "liveSassCompile.settings.formats": [
    {
      "format": "compressed",
      "extensionName": ".min.css",
      "savePath": null
    }
  ],
  "todo-tree.highlights.enabled": true,
  "WolframLanguageServer.WLServerPath": "/home/brian/Downloads/lsp-wl/",
  "povray.render.displayImageDuringRender": true,
  "povray.render.outputPath": "./output",
  "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, IndentWidth: 4 }",
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4 }",
  "gitlens.keymap": "none",
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.invert": 1,
  "files.associations": {
    "*.prisma": "prisma",
    "*.rmd": "markdown",
    "*.yaml": "yaml",
  },
  "vsicons.dontShowNewVersionMessage": true,
  "markdown-preview-enhanced.printBackground": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "jupyter.askForKernelRestart": false,
  "vs-kubernetes": {
    "vscode-kubernetes.minikube-path.linux": "/home/brian/.vs-kubernetes/tools/minikube/linux-amd64/minikube",
    "vscode-kubernetes.kubectl-path.linux": "/home/brian/.vs-kubernetes/tools/kubectl/kubectl",
    "vscode-kubernetes.helm-path.linux": "/home/brian/.vs-kubernetes/tools/helm/linux-amd64/helm"
  },
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "editor.wordWrap": "bounded",
  "diffEditor.wordWrap": "off",
  "redhat.telemetry.enabled": false,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "markdown-preview-enhanced.scrollSync": false,
  "julia.symbolCacheDownload": true,
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "codesnap.containerPadding": "0",
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "[hosts]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.useCorrectCasing": true,
  "editor.minimap.enabled": false,
  "markdown-preview-enhanced.codeBlockTheme": "default.css",
  "markdown-preview-enhanced.HTML5EmbedUseLinkSyntax": true,
  "markdown-preview-enhanced.chromePath": "chromium",
  "editor.guides.indentation": false,
  "editor.guides.highlightActiveIndentation": false,
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": false,
    "typescriptreact": true,
    "jsonc": true
  },
  "codesnap.showLineNumbers": false,
  "codesnap.showWindowControls": false,
  "codesnap.roundedCorners": false,
  "codesnap.transparentBackground": true,
  "editor.stickyScroll.enabled": true,
  "githubPullRequests.pullBranch": "never",
  "git.autofetch": true,
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "nix.formatterPath": "nixfmt",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "workbench.colorTheme": "Dracula Theme",
  "[purescript]": {
    "editor.defaultFormatter": "nwolverson.ide-purescript"
  },
  "react-native-tools.showUserTips": false,
  "remote.SSH.defaultExtensions": [
    "gitpod.gitpod-remote-ssh"
  ],
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${rootPath}${separator}${appName}",
  "solidity.telemetry": false,
  "arduino.useArduinoCli": true,
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "git.openRepositoryInParentFolders": "never",
  "[scad]": {
    "editor.defaultFormatter": "JulianGmp.openscad-formatter"
  },
  "fe.command": "/usr/bin/fe build",
  "svelte.enable-ts-plugin": true,
  "errorLens.enabled": true,
  "jupyter.interactiveWindow.textEditor.executeSelection": false,
  "hediet.vscode-drawio.resizeImages": null,
  "fe.options": "--overwrite --emit=abi,bytecode,ast,tokens,yul,lowered-ast",
  "D2.previewLayout": "dagre",
  "D2.previewTheme": "Cool classics",
  "cmake.configureOnOpen": false,
  "workbench.editor.empty.hint": "hidden",
  "go.toolsManagement.autoUpdate": true,
  "julia.enableTelemetry": false,
  "cmake.showOptionsMovedNotification": false,
  "explorer.confirmPasteNative": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "playwright.showTrace": true,
  "window.zoomLevel": 1,
  "telemetry.telemetryLevel": "off",
  "dotnetAcquisitionExtension.enableTelemetry": false,
  "serverlessIDE.telemetry.enableTelemetry": false,
  "gitlens.telemetry.enabled": false,
  "docker-explorer.enableTelemetry": false,
  "rest-client.enableTelemetry": false,
  "remote.SSH.remotePlatform": {
    "*.gitpod.io": "linux"
  },
  "github.copilot.editor.enableAutoCompletions": false,
  "supermaven.otherWarning": false,
}