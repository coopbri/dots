{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#1073cf2d",
    "editor.lineHighlightBorder": "#9fced11f",
    // cursors
    // "editorCursor.foreground": "#ffff00",
    // "terminalCursor.foreground": "#ffff00"
    // "editorCursor.foreground": "#8bc89d",
    // "terminalCursor.foreground": "#8bc89d"
    "editorCursor.foreground": "#00fff2",
    "terminalCursor.foreground": "#00fff2",
    // "editor.selectionBackground": "#135564",
    // "editor.selectionHighlightBackground": "#135564"
    // "editor.selectionBackground": "#09165f",
    // "editor.selectionHighlightBackground": "#09415f"
    "editor.selectionBackground": "#054457",
    "editor.selectionHighlightBackground": "#054457"
  },
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.autoReveal": false,
  "atomKeymap.promptV3Features": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  /**
   * Editor
   */
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.defaultFormatter": "biomejs.biome-nightly",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.fontLigatures": true,
  // "editor.inlayHints.enabled": "on",
  "editor.inlayHints.fontSize": 10,
  "editor.inlayHints.padding": true,
  "editor.inlayHints.fontFamily": "roboto",
  "editor.rulers": [
    80,
    120
  ],
  "editor.suggestSelection": "first",
  "editor.fontFamily": "'FiraCode Nerd Font Mono', 'Fira Code', 'Hasklug Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback', 'Noto Color Emoji'",
  "editor.fontWeight": "500",
  "editor.linkedEditing": false,
  "editor.selectionClipboard": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // https://stackoverflow.com/a/72518926
  // https://github.com/microsoft/vscode/issues/98594
  "search.followSymlinks": false,
  "diffEditor.renderSideBySide": false,
  /**
   * Terminal
   */
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.allowChords": false,
  // "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\wsl.exe",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.commandsToSkipShell": [
    "language-julia.interrupt"
  ],
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "zsh"
    },
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  /**
   * Language-specific formatters
   */
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
    // "editor.defaultFormatter": "xaver.clang-format"
  },
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[jsonnet]": {
    // "editor.defaultFormatter": "xrc-inc.jsonnet-formatter"
  },
  "[kotlin]": {
    "editor.defaultFormatter": "fwcd.kotlin"
  },
  "[html]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    // "editor.wordWrap": "off",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true
  },
  "[tiltfile]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
  },
  // ! below does not work
